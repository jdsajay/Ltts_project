# ── AI Provider ────────────────────────────────────────
# Choose: "local" (Ollama, free) or "openai" or "anthropic"
AI_PROVIDER=local

# Ollama (free, local) — default
OLLAMA_MODEL=llama3.2

# OpenAI (paid, API)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Anthropic (paid, API)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ── Embedding Model ───────────────────────────────────
# sentence-transformers model (runs locally, free)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ── OCR ───────────────────────────────────────────────
# Path to tesseract binary (auto-detected if on PATH)
TESSERACT_CMD=

# ── Processing ────────────────────────────────────────
# DPI for PDF page rendering
RENDER_DPI=300

# Max parallel workers for batch processing
MAX_WORKERS=4

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
